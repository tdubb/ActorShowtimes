<div class="row">
  <div class="columns twelve centered">
    <h1>My Actors</h1>
  
    <div>
      <form accept-charset="UTF-8" action="/actors" class="new_actor" id="new_actor" method="post">
	
        <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
	
        <div class="row">
          <div class="small-10">
            <div class="row">
              <div class="small-9 columns">
                <input class="right inline" id="actor_name" name="actor[name]" placeholder="Tom Hanks..." type="text">
              </div>
              <div class="small-3 columns">         
                <input class="postfix" name="follow" type="submit" value="Follow">
              </div>
            </div>
          </div>
        </div>

        <div class="row">
          <div class="small-10">
            <div class="row">
              <div class="small-9 columns">
              <% zip = params[:zipcode] %>
             
              <input class="right inline" id="zipcode" name="zipcode" placeholder="Zipcode 78701"  type="text" <%="value=#{zip}"%> >
            
              </div>
              <div class="small-3 columns">         
               	<input class="postfix" name="search" type="submit" value="Search">
              </div>
            </div>
          </div>
        </div>

		  </form>
    </div>

  </div>
</div>


<% count = 0 %>	
<% @actors.each do |actor| %>

	<%= "<div class='row'>".html_safe if count%3 ==0 %>
	 	<div class="small-4 columns">

			<div class="image-back">

				<% if actor.picture_url.nil? %>
					<%= image_tag( 'no_profile.jpg', :class =>"pic" )%>
				<% else %>
					<img class="pic" src=<%= actor.picture_url %>>
				<% end %>

				<%= link_to image_tag( 'remove.jpg', :id=> "close"), actor, method: :delete %>
			</div>

			<div class="actor_link">
				<%= link_to "#{actor.name} Showtimes", actor_path({id: actor.id, :zipcode => params[:zipcode]}) %>	 
			</div>

		</div>

	<% count = count +1 %>
	<%= "</div >".html_safe if count%3 ==0 %>

<% end %>
<script type="text/javascript">

$('form #zipcode').on('keyup change', function() {
    
      zipcode = $(this).val();

      $(".actor_link a").each(function(index){
        
        href = $(this).attr('href');
        href = href.split('?',1)[0];
        $(this).attr('href',href+"?zipcode="+zipcode);
      }); 

    });

</script>